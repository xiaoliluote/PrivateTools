<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px384"
        android:layout_marginBottom="@dimen/px50"
        android:layout_marginTop="@dimen/px50"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中"
        android:textColor="#605f5f"
        android:textSize="@dimen/px46"
        android:id="@+id/foot_text"
        />
    <ImageView
        android:layout_width="@dimen/px35"
        android:layout_height="@dimen/px35"
        android:src="@drawable/pulldown_refresh"
        android:layout_toRightOf="@+id/foot_text"
        android:layout_marginLeft="@dimen/px40"
        android:id="@+id/foot_img1"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="@dimen/px35"
        android:layout_height="@dimen/px35"
        android:src="@drawable/pulldown_refresh"
        android:layout_toRightOf="@+id/foot_img1"
        android:layout_marginLeft="@dimen/px32"
        android:id="@+id/foot_img2"
        android:visibility="gone"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="@dimen/px35"
        android:layout_height="@dimen/px35"
        android:src="@drawable/pulldown_refresh"
        android:layout_toRightOf="@+id/foot_img2"
        android:layout_marginLeft="@dimen/px32"
        android:layout_centerVertical="true"
        android:id="@+id/foot_img3"
        android:visibility="gone"
        />
    </RelativeLayout>
</LinearLayout>
